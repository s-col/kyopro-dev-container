    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "build kyopro C++23",
            "command": "/usr/bin/g++",
            "args": [
                "-O0",
                "-g3",
                "-Wall",
                "-Wextra",
                "-std=gnu++23",
                "-fsanitize=undefined,address",
                "-fno-omit-frame-pointer",
                "-DSCOLDEBUG",
                "-I${workspaceFolder}/include",
                "-I${workspaceFolder}/ac-library",
                "-I${workspaceFolder}",
                "${file}"
            ],
            "group": "build",
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "build kyopro C++23 (file io)",
            "command": "/usr/bin/g++",
            "args": [
                "-O0",
                "-g3",
                "-Wall",
                "-Wextra",
                "-std=gnu++23",
                "-fsanitize=undefined,address",
                "-fno-omit-frame-pointer",
                "-DSCOLDEBUG",
                "-DFILEINPUT",
                "-DFILEOUTPUT",
                "-I${workspaceFolder}/include",
                "-I${workspaceFolder}/ac-library",
                "-I${workspaceFolder}",
                "${file}",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "type": "shell",
            "label": "build kyopro C++23 (optimize)",
